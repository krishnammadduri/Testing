<?xml version="1.0"?>
   <project name="Hello World Project">
<property name="lib-dir" value="lib"/>
   
<taskdef
    name="jmeter"
    classname="org.programmerplanet.ant.taskdefs.jmeter.JMeterTask"
    classpath="${basedir}/lib/ant-jmeter-1.1.1.jar"/>

<jmeter
    jmeterhome="/home/krishnam/apache-jmeter-2.12"
    testplan="${basedir}/loadTests/jenkins.jmx"
    resultlog="${basedir}/loadTests/JMeterResults.jtl"/>
    <jvmarg value="-Xincgc"/>
    <jvmarg value="-Xmx128m"/>
    <jvmarg value="-Dproperty=value"/>

<xslt
    in="${basedir}/loadtests/JMeterResults.jtl"
    out="${basedir}/loadtests/JMeterResults.html"
    style="${basedir}/loadtests/jmeter-results-report.xsl"/>

</project>
