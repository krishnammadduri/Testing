<?xml version="1.0"?>
   <project name="Hello World Project">
<property name="lib-dir" value="lib"/>
   
<taskdef
    name="jmeter"
    classname="org.programmerplanet.ant.taskdefs.jmeter.JMeterTask"
    classpath="${basedir}/lib/ant-jmeter-1.1.1.jar"/>

<jmeter
    jmeterhome="/home/krishnam/apache-jmeter-2.12"
    testplan="${basedir}/loadTests/jenkins.jmx"
    resultlog="${basedir}/loadTests/jmeter-results-report.xsl"/>
    
<target name="report" depends="_message_xalan">
  <xslt
    classpathref="xslt.classpath"
    force="true"
      in="${testpath}/${test}.jtl"
      out="${testpath}/${test}.html"
      style="${basedir}/jmeter-results-shanhe-me.xsl">
    <param name="showData" expression="${show-data}"/>
  </xslt>
</target>

</project>
